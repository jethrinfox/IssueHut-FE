{
	"name": "with-typescript",
	"version": "1.0.0",
	"description": "NodeJS Backend for IssueHut (Jira Clone)",
	"main": "src/index.ts",
	"scripts": {
		"dev": "next",
		"build": "next build",
		"start": "next start",
		"type-check": "tsc",
		"lint": "eslint src --ext .ts,.tsx --cache",
		"lint:fix": "yarn lint --fix",
		"format": "prettier -w src",
		"commit": "git-cz",
		"gen": "graphql-codegen --config codegen.yml"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/jethrinfox/IssueHut-FE.git"
	},
	"keywords": [
		"next",
		"react",
		"issuehut",
		"jira",
		"clone",
		"graphql"
	],
	"author": "felipe malacarne <jethrinfox@gmail.com>",
	"homepage": "https://github.com/jethrinfox/IssueHut-FE#readme",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/jethrinfox/IssueHut-FE/issues"
	},
	"dependencies": {
		"@apollo/client": "^3.3.14",
		"@chakra-ui/icons": "^1.0.10",
		"@chakra-ui/react": "^1.5.0",
		"@emotion/react": "^11",
		"@emotion/styled": "^11",
		"formik": "^2.2.6",
		"framer-motion": "^4",
		"graphql": "^15.5.0",
		"next": "latest",
		"next-with-apollo": "^5.1.1",
		"react": "^17.0.1",
		"react-dom": "^17.0.1"
	},
	"devDependencies": {
		"@commitlint/cli": "^12.1.1",
		"@commitlint/config-conventional": "^12.1.1",
		"@graphql-codegen/cli": "1.21.3",
		"@graphql-codegen/typescript": "1.21.1",
		"@graphql-codegen/typescript-operations": "1.17.15",
		"@graphql-codegen/typescript-react-apollo": "2.2.3",
		"@types/node": "^12.12.21",
		"@types/react": "^17.0.2",
		"@types/react-dom": "^17.0.1",
		"@typescript-eslint/eslint-plugin": "^4.21.0",
		"@typescript-eslint/parser": "^4.21.0",
		"eslint": "^7.24.0",
		"eslint-config-prettier": "^8.1.0",
		"eslint-config-standard": "^16.0.2",
		"eslint-plugin-import": "^2.22.1",
		"eslint-plugin-node": "^11.1.0",
		"eslint-plugin-prettier": "^3.3.1",
		"eslint-plugin-promise": "^5.1.0",
		"eslint-plugin-react": "^7.23.2",
		"eslint-plugin-react-hooks": "^4.2.0",
		"git-cz": "^4.7.6",
		"husky": "^6.0.0",
		"lint-staged": "^10.5.4",
		"prettier": "^2.2.1",
		"typescript": "^4.2.4"
	},
	"lint-staged": {
		"src/**/*.{ts,tsx}": "yarn lint:fix",
		"src/**/*.{js,jsx,ts,tsx,json,css,md}": "yarn format"
	},
	"husky": {
		"hooks": {
			"commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
			"pre-commit": "lint-staged"
		}
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	}
}
